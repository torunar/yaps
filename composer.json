{
    "name": "torunar/yaps",
    "description": "Yet Another PHP Solitaire",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Torunar\\Yaps\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Yaps\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": [
            "vendor/bin/phpunit tests"
        ],
        "lint": [
            "vendor/bin/phpstan analyze --level=8 src tests"
        ]
    }
}
